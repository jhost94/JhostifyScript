{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2017",
    "module": "ESNext",
    "declarationDir": "./dist",
    "outDir": "./dist",
    "lib": [
      "es2018",
      "ES5",
      "ES6",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/require.js"
  ],
  "exclude": [
    "dist",
    "dist/*"
  ]
}
