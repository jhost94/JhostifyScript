{
    "name": "@jhub-center/jhostify-script",
    "version": "0.3.2",
    "description": "The frontend framework to reduce the use of HTML to none, and be able to use configuration to build the whole website. Made for the JHub project",
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "clean": "rm -rf ./dist",
        "pre_build_amd": "tsc -p tsconfigAMD.json",
        "pre_build_normal": "tsc -p tsconfig.json",
        "pre_build": "npm run pre_build_amd && npm run pre_build_normal",
        "adjust": "cp package.json ./dist/ && cp .npmrc ./dist/ && cp README.md ./dist/ && cp LICENSE ./dist/ && node cleanse-pkg.js",
        "add_missing_files": "cp -r ./src/bin ./dist/ && cp -r ./src/scripts ./dist/",
        "build": "npm run clean && npm run pre_build && npm run adjust && npm run add_missing_files",
        "test": "npm run build && cd dist && npm pack && mv *.tgz ../../../delme/JHub_Frontend/ && cd .."
    },
    "bin": {
        "jhost": "bin/jhost.js"
    },
    "files": [
        "cjs",
        "esm",
        "framework",
        "utils",
        "bin",
        "scripts",
        "index.js",
        "index.d.ts",
        "index.umd.js",
        "index.umd.js.map",
        "index.cjs.js",
        "index.esm.js",
        "jhostifyScript.js",
        "jhostifyScript.js",
        "jhostifyScript.d.ts",
        "LICENSE",
        "package.json",
        "README.md"
    ],
    "exports": {
        ".": {
            "import": "./index.esm.js",
            "require": "./index.cjs.js",
            "browser": "./index.umd.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jhost94/JhostifyScript.git"
    },
    "keywords": [
        "JHub",
        "jhub",
        "learning",
        "from",
        "scratch",
        "framework",
        "nohtml",
        "jsonly",
        "typescript-only",
        "be-only"
    ],
    "author": "Jhost",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jhost94/JhostifyScript/issues"
    },
    "homepage": "https://github.com/jhost94/JhostifyScript#readme",
    "dependencies": {
        "requirejs": "^2.3.7",
        "tslib": "^2.5.2"
    },
    "devDependencies": {
        "@types/node": "^16.7.13",
        "tslib": "^2.5.2",
        "typescript": "^4.4.2"
    }
}
