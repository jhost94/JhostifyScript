{
  "name": "@jhub-center/jhostify-script",
  "version": "0.0.2",
  "description": "The frontend framework to reduce the use of HTML to none, and be able to use configuration to build the whole website. Made for the JHub project",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "pre_build": "tsc",
    "copy-files": "cp ./src/index.html ./dist/index.html && cp ./src/require.js ./dist/require.js && cp ./node_modules/tslib/tslib.js ./dist/tslib.js",
    "build": "npm run clean && npm run pre_build && npm run copy-files",
    "dev-run": "npm run build && http-server-spa ./dist/",
    "dev": "npm run dev-run",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhost94/JhostifyScript.git"
  },
  "keywords": [
    "JHub",
    "jhub",
    "frontend",
    "microservice",
    "micro-service",
    "learning",
    "from",
    "scratch"
  ],
  "author": "Jhost",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jhost94/JhostifyScript/issues"
  },
  "homepage": "https://github.com/jhost94/JhostifyScript#readme",
  "dependencies": {
    "http-server": "^14.1.1",
    "http-server-spa": "^1.3.0",
    "tslib": "^2.5.2"
  },
  "devDependencies": {
    "@types/node": "^16.7.13",
    "tslib": "^2.5.2",
    "typescript": "^4.4.2"
  }
}
